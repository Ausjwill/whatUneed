@model whatUneed.Models.Favorites.FavoritesDetail

@{
    ViewBag.Title = "SocialRemove";
}

<h2>Are you sure you want to remove <strong>@Html.DisplayFor(model => model.SocialTitle)</strong> from your favorites?</h2>

<div>

    <hr />

    <h4>@Html.DisplayFor(model => model.SocialDescription)</h4>

    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SocialCategoryType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SocialCategoryType)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SocialResourceType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SocialResourceType)
        </dd>

        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SocialCity), @Html.DisplayFor(model => model.SocialState)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SocialInPerson)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SocialInPerson)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SocialUrl)
        </dt>

        <dd>
            <a href="
           @Html.DisplayFor(model => model.SocialUrl)
           "
               target="blank">
                @Html.DisplayFor(model => model.SocialUrl)
            </a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SocialCreatedUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SocialCreatedUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SocialModifiedUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SocialModifiedUtc)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remove" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
