@model IEnumerable<whatUneed.Models.Favorites.FavoritesListItem>
@using whatUneed.Data

@{
    ViewBag.Title = "Index";
}

<h2>Favorites</h2>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<h3>Emotional</h3>

<table class="table table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalCategoryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalResourceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalInPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalUrl)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        if (item.EmotionalId != null)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmotionalCategoryType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmotionalTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmotionalResourceType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmotionalCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmotionalState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmotionalInPerson)
                </td>
                <td>
                    <a href="
                    @Html.DisplayFor(modelItem => item.EmotionalUrl)
               "
                       target="blank">
                        @Html.DisplayFor(modelItem => item.EmotionalUrl)
                    </a>
                </td>
                <td>
                    @Html.ActionLink("Details", "EmotionalDetails", new { id = item.EmotionalId }) |
                    @Html.ActionLink("Remove", "EmotionalRemove", new { id = item.EmotionalId })
                </td>
            </tr>
        }

    }

</table>

