@model IEnumerable<whatUneed.Models.Physical.PhysicalListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Physical</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<h4>Search by:</h4>

@Html.Partial("_Search")

@Html.ActionLink("Back to List", "Index")

<br />
<br />
<br />

<table class="table table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResourceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink($"{item.CategoryType}", "Details", new { id = item.PhysicalId }, null)
            </td>
            <td>
                @Html.ActionLink($"{item.Title}", "Details", new { id = item.PhysicalId }, null)
            </td>
            <td>
                @Html.ActionLink($"{item.ResourceType}", "Details", new { id = item.PhysicalId }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InPerson)
            </td>
            <td>
                <a href="
               @Html.DisplayFor(modelItem => item.Url)
               "
                   target="blank">
                    @Html.DisplayFor(modelItem => item.Url)
                </a>
            </td>
        </tr>
    }

</table>
