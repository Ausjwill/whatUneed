@using (Html.BeginForm("CategoryType", "Emotional", "Index"))
{

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBox("CategoryType", "", new { htmlAttributes = new { @class = "form-control" } })
                    <input type="submit" value="Search By Category" class="btn btn-primary btn-xs" />
                </div>
            </div>
        </div>
}
