@model IEnumerable<whatUneed.Models.Emotional.EmotionalListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Emotional</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

            @Html.Partial("_Search")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResourceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
                <td>
                    @Html.ActionLink($"{item.CategoryType}", "Details", new { id = item.EmotionalId}, null)
                </td>
                <td>
                    @Html.ActionLink($"{item.Title}", "Details", new { id = item.EmotionalId }, null)
                </td>
                <td>
                    @Html.ActionLink($"{item.ResourceType}", "Details", new { id = item.EmotionalId }, null)
                </td>
                <td>
                    <a href="
               @Html.DisplayFor(modelItem => item.Url)
               "
                       target="blank">
                        @Html.DisplayFor(modelItem => item.Url)
                    </a>
                </td>
            </tr>
    }

</table>
